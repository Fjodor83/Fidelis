<!-- Modal Crea Responsabile -->
@if (mostraModaleResponsabile)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
                    <h5 class="modal-title text-white">@(responsabileInModifica == null ? "Nuovo Responsabile" : "Modifica Responsabile")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ChiudiModaleResponsabile"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <input @bind="responsabileForm.Username" 
                               class="form-control" 
                               placeholder="mario.rossi" 
                               readonly="@(responsabileInModifica != null)" />
                        <small class="text-muted">@(responsabileInModifica == null ? "Username univoco (evita pattern RExx per non confondere con auto-generati)" : "L'username non può essere modificato")</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nome Completo</label>
                        <input @bind="responsabileForm.NomeCompleto" class="form-control" placeholder="Mario Rossi" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input @bind="responsabileForm.Email" type="email" class="form-control" placeholder="mario.rossi@example.com" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password (opzionale)</label>
                        <input @bind="responsabileForm.Password" type="password" class="form-control" placeholder="Suns2024!" />
                        <small class="text-muted">Se vuoto, verrà usata la password predefinita: Suns2024!</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Punti Vendita</label>
                        @foreach (var pv in puntiVendita)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" 
                                       checked="@responsabileForm.PuntiVenditaIds.Contains(pv.Id)"
                                       @onchange="@(e => TogglePuntoVendita(pv.Id, (bool)e.Value))"
                                       id="pv_@pv.Id">
                                <label class="form-check-label" for="pv_@pv.Id">
                                    <code>@pv.Codice</code> - @pv.Nome (@pv.Citta)
                                </label>
                            </div>
                        }
                        @if (!responsabileForm.PuntiVenditaIds.Any())
                        {
                            <small class="text-danger d-block mt-1">Seleziona almeno un punto vendita</small>
                        }
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" @bind="responsabileForm.RichiestaResetPassword" id="checkResetPwd">
                        <label class="form-check-label" for="checkResetPwd">
                            Richiedi cambio password al primo accesso
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="responsabileForm.Attivo" id="checkAttivoResp">
                        <label class="form-check-label" for="checkAttivoResp">
                            Responsabile attivo
                        </label>
                    </div>

                    @if (!string.IsNullOrEmpty(messaggioErroreResponsabile))
                    {
                        <div class="alert alert-danger mt-3">@messaggioErroreResponsabile</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="ChiudiModaleResponsabile">Annulla</button>
                    <button class="btn btn-success" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%); border: none;" 
                            @onclick="SalvaResponsabile" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        @(responsabileInModifica == null ? "Crea" : "Salva Modifiche")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

