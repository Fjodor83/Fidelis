@* Fidelity.Client/Pages/Dashboard.razor *@
@page "/dashboard"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Dashboard Admin - Suns</PageTitle>

<style>
    /* Custom tab styling with green gradient scale */
    .tab-green-1 {
        border: none !important;
        background: transparent;
        color: #666;
        font-weight: 500;
        border-bottom: 3px solid transparent !important;
        transition: all 0.3s ease;
    }
    .tab-green-1.active {
        background: linear-gradient(135deg, #7bc96f 0%, #52ab47 100%) !important;
        color: white !important;
        border-bottom: 3px solid #52ab47 !important;
        box-shadow: 0 2px 8px rgba(123, 201, 111, 0.3);
    }
    .tab-green-1:hover:not(.active) {
        background: rgba(123, 201, 111, 0.1);
        color: #52ab47;
    }

    .tab-green-2 {
        border: none !important;
        background: transparent;
        color: #666;
        font-weight: 500;
        border-bottom: 3px solid transparent !important;
        transition: all 0.3s ease;
    }
    .tab-green-2.active {
        background: linear-gradient(135deg, #52ab47 0%, #2d8a27 100%) !important;
        color: white !important;
        border-bottom: 3px solid #2d8a27 !important;
        box-shadow: 0 2px 8px rgba(82, 171, 71, 0.3);
    }
    .tab-green-2:hover:not(.active) {
        background: rgba(82, 171, 71, 0.1);
        color: #2d8a27;
    }

    .tab-green-3 {
        border: none !important;
        background: transparent;
        color: #666;
        font-weight: 500;
        border-bottom: 3px solid transparent !important;
        transition: all 0.3s ease;
    }
    .tab-green-3.active {
        background: linear-gradient(135deg, #2d8a27 0%, #105a12 100%) !important;
        color: white !important;
        border-bottom: 3px solid #105a12 !important;
        box-shadow: 0 2px 8px rgba(45, 138, 39, 0.3);
    }
    .tab-green-3:hover:not(.active) {
        background: rgba(45, 138, 39, 0.1);
        color: #105a12;
    }

    .tab-green-4 {
        border: none !important;
        background: transparent;
        color: #666;
        font-weight: 500;
        border-bottom: 3px solid transparent !important;
        transition: all 0.3s ease;
    }
    .tab-green-4.active {
        background: linear-gradient(135deg, #105a12 0%, #053e30 100%) !important;
        color: white !important;
        border-bottom: 3px solid #053e30 !important;
        box-shadow: 0 2px 8px rgba(16, 90, 18, 0.3);
    }
    .tab-green-4:hover:not(.active) {
        background: rgba(16, 90, 18, 0.1);
        color: #053e30;
    }
</style>

<div class="min-vh-100" style="background-color: #f8f9fa;">
    <nav class="navbar navbar-dark" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">☀️ Suns Admin Dashboard</span>
            <div class="d-flex align-items-center gap-3">
                <span class="text-white">
                    <i class="bi bi-person-circle"></i> @nomeCompleto
                    <span class="badge bg-warning text-dark ms-2">ADMIN</span>
                </span>
                <button class="btn btn-outline-light btn-sm" @onclick="Logout">
                    <i class="bi bi-box-arrow-right"></i> Esci
                </button>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        
        <!-- Global Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #7bc96f 0%, #52ab47 100%);">
                                <i class="bi bi-people-fill text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Clienti Totali</h6>
                                <h2 class="mb-0 fw-bold" style="color: #52ab47;">@totaleClienti</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #52ab47 0%, #2d8a27 100%);">
                                <i class="bi bi-shop text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Punti Vendita</h6>
                                <h2 class="mb-0 fw-bold" style="color: #2d8a27;">@puntiVendita.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #2d8a27 0%, #105a12 100%);">
                                <i class="bi bi-award-fill text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Punti Fedeltà</h6>
                                <h2 class="mb-0 fw-bold" style="color: #105a12;">@puntiTotali</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #105a12 0%, #053e30 100%);">
                                <i class="bi bi-person-badge-fill text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Responsabili</h6>
                                <h2 class="mb-0 fw-bold" style="color: #053e30;">@responsabili.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabbed Navigation -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <ul class="nav nav-tabs border-0" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-1 @(activeTab == "overview" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "overview"' type="button">
                            <i class="bi bi-speedometer2 me-2"></i>Panoramica
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-2 @(activeTab == "stores" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "stores"' type="button">
                            <i class="bi bi-shop me-2"></i>Punti Vendita
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-3 @(activeTab == "managers" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "managers"' type="button">
                            <i class="bi bi-people me-2"></i>Responsabili
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-4 @(activeTab == "clients" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "clients"' type="button">
                            <i class="bi bi-person-badge me-2"></i>Clienti
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body p-4">
                <div class="tab-content" id="dashboardTabsContent">
                    
                    <!-- Overview Tab -->
                    @if (activeTab == "overview")
                    {
                        <h5 class="mb-4"><i class="bi bi-bar-chart me-2"></i>Statistiche per Negozio</h5>
                        <div class="row g-3">
                            @foreach (var pv in puntiVendita.OrderByDescending(p => p.NumeroClienti))
                            {
                                <div class="col-md-6 col-lg-3">
                                    <div class="card border @(pv.Attivo ? "border-success" : "border-secondary")">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h6 class="mb-0">@pv.Nome</h6>
                                                    <small class="text-muted"><i class="bi bi-geo-alt"></i> @pv.Citta</small>
                                                </div>
                                                <span class="badge bg-primary">@pv.Codice</span>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h4 class="mb-0">@pv.NumeroClienti</h4>
                                                    <small class="text-muted">clienti registrati</small>
                                                </div>
                                                @if (!pv.Attivo)
                                                {
                                                    <span class="badge bg-secondary">Non attivo</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (activeTab == "stores")
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0"><i class="bi bi-shop me-2"></i>Gestione Negozi</h5>
                            <button class="btn btn-success" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%); border: none;" @onclick="ApriModaleCreazione">
                                <i class="bi bi-plus-circle"></i> Nuovo Negozio
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Codice</th>
                                        <th>Nome</th>
                                        <th>Città</th>
                                        <th>Indirizzo</th>
                                        <th>Telefono</th>
                                        <th>Clienti</th>
                                        <th>Stato</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var negozio in puntiVendita)
                                    {
                                        <tr>
                                            <td><code>@negozio.Codice</code></td>
                                            <td>@negozio.Nome</td>
                                            <td>@negozio.Citta</td>
                                            <td>@negozio.Indirizzo</td>
                                            <td>@negozio.Telefono</td>
                                            <td><span class="badge bg-primary">@negozio.NumeroClienti</span></td>
                                            <td>
                                                @if (negozio.Attivo)
                                                {
                                                    <span class="badge bg-success">Attivo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Non attivo</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-outline-primary" @onclick="() => ApriModaleModifica(negozio)">
                                                        <i class="bi bi-pencil"></i> Modifica
                                                    </button>
                                                    <button class="btn btn-outline-danger" @onclick="() => ApriModaleEliminazione(negozio)">
                                                        <i class="bi bi-trash"></i> Elimina
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (activeTab == "managers")
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0"><i class="bi bi-people me-2"></i>Gestione Responsabili</h5>
                            <button class="btn btn-success" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%); border: none;" @onclick="ApriModaleCrezioneResponsabile">
                                <i class="bi bi-plus-circle"></i> Nuovo Responsabile
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Username</th>
                                        <th>Nome Completo</th>
                                        <th>Email</th>
                                        <th>Punti Vendita</th>
                                        <th>Ultimo Accesso</th>
                                        <th>Stato</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var responsabile in responsabili)
                                    {
                                        <tr>
                                            <td><code>@responsabile.Username</code></td>
                                            <td>@(string.IsNullOrWhiteSpace(responsabile.NomeCompleto) ? "(Da completare)" : responsabile.NomeCompleto)</td>
                                            <td>@responsabile.Email</td>
                                            <td>
                                                @if (responsabile.PuntiVendita.Any())
                                                {
                                                    @foreach (var pv in responsabile.PuntiVendita)
                                                    {
                                                        <span class="badge bg-primary me-1">@pv.Codice</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (responsabile.UltimoAccesso.HasValue)
                                                {
                                                    <small>@responsabile.UltimoAccesso.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Mai</small>
                                                }
                                            </td>
                                            <td>
                                                @if (responsabile.Attivo)
                                                {
                                                    <span class="badge bg-success">Attivo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Non attivo</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-outline-primary" @onclick="() => ApriModaleModificaResponsabile(responsabile)">
                                                        <i class="bi bi-pencil"></i> Modifica
                                                    </button>
                                                    <button class="btn btn-outline-danger" @onclick="() => ApriModaleEliminazioneResponsabile(responsabile)">
                                                        <i class="bi bi-trash"></i> Elimina
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (activeTab == "clients")
                    {
                        <div class="row align-items-center mb-4">
                            <div class="col-md-6">
                                <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Ricerca Clienti</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input @bind="ricercaCliente" 
                                           @bind:event="oninput"
                                           @onkeyup="CercaCliente"
                                           class="form-control" 
                                           placeholder="Cerca per codice o email..." />
                                </div>
                            </div>
                        </div>
                        @if (clientiTrovati.Any())
                        {
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover">
                                    <thead class="table-light sticky-top">
                                        <tr>
                                            <th>Nome</th>
                                            <th>Email</th>
                                            <th>Codice</th>
                                            <th>Punti</th>
                                            <th>Negozio</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cliente in clientiTrovati)
                                        {
                                            <tr>
                                                <td><strong>@cliente.NomeCompleto</strong></td>
                                                <td>@cliente.Email</td>
                                                <td><code>@cliente.CodiceFidelity</code></td>
                                                <td><span class="badge bg-primary">@cliente.PuntiTotali</span></td>
                                                <td>@cliente.PuntoVenditaRegistrazione (@cliente.PuntoVenditaCodice)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <p class="text-muted text-center mb-0 mt-2"><small>Trovati @clientiTrovati.Count risultati (max 10)</small></p>
                        }
                        else if (!string.IsNullOrWhiteSpace(ricercaCliente) && ricercaCliente.Length >= 3)
                        {
                            <p class="text-muted text-center mb-0">Nessun cliente trovato per "@ricercaCliente"</p>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">Inserisci almeno 3 caratteri per cercare un cliente</p>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crea/Modifica Negozio -->
@if (mostraModaleNegozio)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
                    <h5 class="modal-title text-white">
                        @(negozioInModifica == null ? "Nuovo Negozio" : "Modifica Negozio")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ChiudiModaleNegozio"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Codice</label>
                        <input @bind="negozioForm.Codice" class="form-control" placeholder="NE01" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nome</label>
                        <input @bind="negozioForm.Nome" class="form-control" placeholder="Suns Centro" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Città</label>
                        <input @bind="negozioForm.Citta" class="form-control" placeholder="Roma" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Indirizzo</label>
                        <input @bind="negozioForm.Indirizzo" class="form-control" placeholder="Via del Corso 1" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Telefono</label>
                        <input @bind="negozioForm.Telefono" class="form-control" placeholder="+39 06 1234567" />
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="negozioForm.Attivo" id="checkAttivo">
                        <label class="form-check-label" for="checkAttivo">
                            Negozio attivo
                        </label>
                    </div>

                    @if (!string.IsNullOrEmpty(messaggioErroreNegozio))
                    {
                        <div class="alert alert-danger mt-3">@messaggioErroreNegozio</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="ChiudiModaleNegozio">Annulla</button>
                    <button class="btn btn-primary" @onclick="SalvaNegozio" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Salva
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal Eliminazione -->
@if (mostraModaleEliminazione && negozioInEliminazione != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Conferma Eliminazione</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ChiudiModaleEliminazione"></button>
                </div>
                <div class="modal-body">
                    <p>Sei sicuro di voler eliminare il negozio <strong>@negozioInEliminazione.Nome</strong>?</p>
                    @if (negozioInEliminazione.NumeroClienti > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            Attenzione: ci sono <strong>@negozioInEliminazione.NumeroClienti clienti</strong> associati a questo negozio.
                            L'eliminazione potrebbe non essere possibile.
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(messaggioErroreEliminazione))
                    {
                        <div class="alert alert-danger">@messaggioErroreEliminazione</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="ChiudiModaleEliminazione">Annulla</button>
                    <button class="btn btn-danger" @onclick="EliminaNegozio" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Elimina
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal Crea Responsabile -->
@if (mostraModaleResponsabile)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
                    <h5 class="modal-title text-white">@(responsabileInModifica == null ? "Nuovo Responsabile" : "Modifica Responsabile")</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ChiudiModaleResponsabile"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <input @bind="responsabileForm.Username" 
                               class="form-control" 
                               placeholder="mario.rossi" 
                               readonly="@(responsabileInModifica != null)" />
                        <small class="text-muted">@(responsabileInModifica == null ? "Username univoco (evita pattern RExx per non confondere con auto-generati)" : "L'username non può essere modificato")</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nome Completo</label>
                        <input @bind="responsabileForm.NomeCompleto" class="form-control" placeholder="Mario Rossi" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input @bind="responsabileForm.Email" type="email" class="form-control" placeholder="mario.rossi@example.com" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password (opzionale)</label>
                        <input @bind="responsabileForm.Password" type="password" class="form-control" placeholder="Suns2024!" />
                        <small class="text-muted">Se vuoto, verrà usata la password predefinita: Suns2024!</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Punti Vendita</label>
                        @foreach (var pv in puntiVendita)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" 
                                       checked="@responsabileForm.PuntiVenditaIds.Contains(pv.Id)"
                                       @onchange="@(e => TogglePuntoVendita(pv.Id, (bool)e.Value))"
                                       id="pv_@pv.Id">
                                <label class="form-check-label" for="pv_@pv.Id">
                                    <code>@pv.Codice</code> - @pv.Nome (@pv.Citta)
                                </label>
                            </div>
                        }
                        @if (!responsabileForm.PuntiVenditaIds.Any())
                        {
