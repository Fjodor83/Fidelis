@* Fidelity.Client/Pages/Dashboard.razor *@
@page "/dashboard"
@using Fidelity.Client.Pages.Admin.Components
@using Fidelity.Client.Shared
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Dashboard Admin - Suns</PageTitle>

<div class="min-vh-100" style="background-color: #f8f9fa;">
    <nav class="navbar navbar-dark" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">☀️ Suns Admin Dashboard</span>
            <div class="d-flex align-items-center gap-3">
                <button class="btn btn-light btn-sm" @onclick='() => Navigation.NavigateTo("/assegna-punti")'>
                    <i class="bi bi-plus-circle me-1"></i>Assegna Punti
                </button>
                <span class="text-white">
                    <i class="bi bi-person-circle"></i> @nomeCompleto
                    <span class="badge bg-warning text-dark ms-2">ADMIN</span>
                </span>
                <button class="btn btn-outline-light btn-sm" @onclick="Logout">
                    <i class="bi bi-box-arrow-right"></i> Esci
                </button>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        
        <!-- Global Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #7bc96f 0%, #52ab47 100%);">
                                <i class="bi bi-people-fill text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Clienti Totali</h6>
                                <h2 class="mb-0 fw-bold" style="color: #52ab47;">@totaleClienti</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #52ab47 0%, #2d8a27 100%);">
                                <i class="bi bi-shop text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Punti Vendita</h6>
                                <h2 class="mb-0 fw-bold" style="color: #2d8a27;">@puntiVendita.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #2d8a27 0%, #105a12 100%);">
                                <i class="bi bi-award-fill text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Punti Fedeltà</h6>
                                <h2 class="mb-0 fw-bold" style="color: #105a12;">@puntiTotali</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 rounded-3 p-3" style="background: linear-gradient(135deg, #105a12 0%, #053e30 100%);">
                                <i class="bi bi-person-badge-fill text-white" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 small">Responsabili</h6>
                                <h2 class="mb-0 fw-bold" style="color: #053e30;">@responsabili.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabbed Navigation -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <ul class="nav nav-tabs border-0 nav-tabs-scrollable" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-1 @(activeTab == "overview" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "overview"' type="button">
                            <i class="bi bi-speedometer2 me-2"></i>Panoramica
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-2 @(activeTab == "stores" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "stores"' type="button">
                            <i class="bi bi-shop me-2"></i>Punti Vendita
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-3 @(activeTab == "managers" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "managers"' type="button">
                            <i class="bi bi-people me-2"></i>Responsabili
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-4 @(activeTab == "clients" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "clients"' type="button">
                            <i class="bi bi-person-badge me-2"></i>Clienti
                        </button>
                    </li>
                    
                    <li class="nav-item" role="presentation">
                        <button class="nav-link tab-green-5 @(activeTab == "analytics" ? "active" : "") px-4 py-2" @onclick='() => activeTab = "analytics"' type="button">
                            <i class="bi bi-graph-up-arrow me-2"></i>Analytics
                        </button>
                    </li>

                    <li class="nav-item">
                        <button class="nav-link tab-green-6 @(activeTab == "transactions" ? "active" : "") px-4 py-2" 
                                @onclick='() => activeTab = "transactions"'>
                            <i class="bi bi-receipt me-2"></i>Transazioni
                        </button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link tab-green-7 @(activeTab == "coupons" ? "active" : "") px-4 py-2" 
                                @onclick='() => activeTab = "coupons"'>
                            <i class="bi bi-ticket-perforated me-2"></i>Coupons
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body p-4">
                <div class="tab-content" id="dashboardTabsContent">
                    
                    <!-- Analytics Tab -->
                    @if (activeTab == "analytics")
                    {
                         <AnalyticsTab />
                    }

                    <!-- Overview Tab -->
                    @if (activeTab == "overview")
                    {
                        <h5 class="mb-4"><i class="bi bi-bar-chart me-2"></i>Statistiche per Negozio</h5>
                        <div class="row g-3">
                            @foreach (var pv in puntiVendita.OrderByDescending(p => p.NumeroClienti))
                            {
                                <div class="col-md-6 col-lg-3">
                                    <div class="card border @(pv.Attivo ? "border-success" : "border-secondary")">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h6 class="mb-0">@pv.Nome</h6>
                                                    <small class="text-muted"><i class="bi bi-geo-alt"></i> @pv.Citta</small>
                                                </div>
                                                <span class="badge bg-primary">@pv.Codice</span>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h4 class="mb-0">@pv.NumeroClienti</h4>
                                                    <small class="text-muted">clienti registrati</small>
                                                </div>
                                                @if (!pv.Attivo)
                                                {
                                                    <span class="badge bg-secondary">Non attivo</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (activeTab == "stores")
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0"><i class="bi bi-shop me-2"></i>Gestione Negozi</h5>
                            <button class="btn btn-success" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%); border: none;" @onclick="ApriModaleCreazione">
                                <i class="bi bi-plus-circle"></i> Nuovo Negozio
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-mobile-cards">
                                <thead class="table-light">
                                    <tr>
                                        <th class="d-none d-md-table-cell">Codice</th>
                                        <th>Nome</th>
                                        <th>Città</th>
                                        <th>Indirizzo</th>
                                        <th>Telefono</th>
                                        <th>Clienti</th>
                                        <th>Stato</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var negozio in puntiVendita)
                                    {
                                        <tr>
                                            <td data-label="Codice"><code>@negozio.Codice</code></td>
                                            <td data-label="Nome">@negozio.Nome</td>
                                            <td data-label="Città">@negozio.Citta</td>
                                            <td data-label="Indirizzo">@negozio.Indirizzo</td>
                                            <td data-label="Telefono">@negozio.Telefono</td>
                                            <td data-label="Clienti"><span class="badge bg-primary">@negozio.NumeroClienti</span></td>
                                            <td data-label="Stato">
                                                @if (negozio.Attivo)
                                                {
                                                    <span class="badge bg-success">Attivo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Non attivo</span>
                                                }
                                            </td>
                                            <td data-label="Azioni">
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-outline-primary" @onclick="() => ApriModaleModifica(negozio)">
                                                        <i class="bi bi-pencil"></i> Modifica
                                                    </button>
                                                    <button class="btn btn-outline-danger" @onclick="() => ApriModaleEliminazione(negozio)">
                                                        <i class="bi bi-trash"></i> Elimina
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (activeTab == "managers")
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0"><i class="bi bi-people me-2"></i>Gestione Responsabili</h5>
                            <button class="btn btn-success" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%); border: none;" @onclick="ApriModaleCrezioneResponsabile">
                                <i class="bi bi-plus-circle"></i> Nuovo Responsabile
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover table-mobile-cards">
                                <thead class="table-light">
                                    <tr>
                                        <th>Username</th>
                                        <th>Nome Completo</th>
                                        <th>Email</th>
                                        <th>Punti Vendita</th>
                                        <th>Ultimo Accesso</th>
                                        <th>Stato</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var responsabile in responsabili)
                                    {
                                        <tr>
                                            <td data-label="Username"><code>@responsabile.Username</code></td>
                                            <td data-label="Nome">@(string.IsNullOrWhiteSpace(responsabile.NomeCompleto) ? "(Da completare)" : responsabile.NomeCompleto)</td>
                                            <td data-label="Email">@responsabile.Email</td>
                                            <td data-label="Punti Vendita">
                                                @if (responsabile.PuntiVendita.Any())
                                                {
                                                    @foreach (var pv in responsabile.PuntiVendita)
                                                    {
                                                        <span class="badge bg-primary me-1">@pv.Codice</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td data-label="Ultimo Accesso">
                                                @if (responsabile.UltimoAccesso.HasValue)
                                                {
                                                    <small>@responsabile.UltimoAccesso.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Mai</small>
                                                }
                                            </td>
                                            <td data-label="Stato">
                                                @if (responsabile.Attivo)
                                                {
                                                    <span class="badge bg-success">Attivo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Non attivo</span>
                                                }
                                            </td>
                                            <td data-label="Azioni">
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-outline-primary" @onclick="() => ApriModaleModificaResponsabile(responsabile)">
                                                        <i class="bi bi-pencil"></i> Modifica
                                                    </button>
                                                    <button class="btn btn-outline-danger" @onclick="() => ApriModaleEliminazioneResponsabile(responsabile)">
                                                        <i class="bi bi-trash"></i> Elimina
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (activeTab == "clients")
                    {
                        <div class="row align-items-center mb-4">
                            <div class="col-md-6">
                                <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Ricerca Clienti</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input @bind="ricercaCliente" 
                                           @bind:event="oninput"
                                           @onkeyup="CercaCliente"
                                           class="form-control" 
                                           placeholder="Cerca per codice o email..." />
                                </div>
                            </div>
                        </div>
                        @if (clientiTrovati.Any())
                        {
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover table-mobile-cards">
                                    <thead class="table-light sticky-top">
                                        <tr>
                                            <th>Nome</th>
                                            <th>Email</th>
                                            <th>Codice</th>
                                            <th>Punti</th>
                                            <th>Negozio</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cliente in clientiTrovati)
                                        {
                                            <tr>
                                                <td data-label="Nome"><strong>@cliente.NomeCompleto</strong></td>
                                                <td data-label="Email">@cliente.Email</td>
                                                <td data-label="Codice"><code>@cliente.CodiceFidelity</code></td>
                                                <td data-label="Punti"><span class="badge bg-primary">@cliente.PuntiTotali</span></td>
                                                <td data-label="Negozio">@cliente.PuntoVenditaRegistrazione (@cliente.PuntoVenditaCodice)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <p class="text-muted text-center mb-0 mt-2"><small>Trovati @clientiTrovati.Count risultati (max 10)</small></p>
                        }
                        else if (!string.IsNullOrWhiteSpace(ricercaCliente) && ricercaCliente.Length >= 3)
                        {
                            <p class="text-muted text-center mb-0">Nessun cliente trovato per "@ricercaCliente"</p>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">Inserisci almeno 3 caratteri per cercare un cliente</p>
                        }
                    }

                    @if (activeTab == "transactions")
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Storico Transazioni</h5>
                            <button class="btn btn-outline-secondary btn-sm" @onclick="RubricaTransazioni">
                                <i class="bi bi-arrow-clockwise me-1"></i>Aggiorna
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle table-mobile-cards">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th>Data</th>
                                        <th>Cliente</th>
                                        <th>Codice</th>
                                        <th>Negozio</th>
                                        <th>Operatore</th>
                                        <th class="text-end">Importo</th>
                                        <th class="text-center">Punti</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (transazioni.Any())
                                    {
                                        @foreach (var t in transazioni)
                                        {
                                            <tr>
                                                <td data-label="Data">@t.DataTransazione.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                                <td data-label="Cliente">@t.ClienteNome</td>
                                                <td data-label="Codice"><code>@t.CodiceFidelity</code></td>
                                                <td data-label="Negozio">@t.PuntoVenditaNome</td>
                                                <td data-label="Operatore"><small class="text-muted">@t.ResponsabileNome</small></td>
                                                <td class="text-end" data-label="Importo">
                                                    @if (t.ImportoSpesa.HasValue)
                                                    {
                                                        <span>@(t.ImportoSpesa.Value.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("it-IT")))</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td class="text-center" data-label="Punti">
                                                    <span class="badge bg-success">+@t.PuntiAssegnati</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center py-4 text-muted">
                                                Nessuna transazione trovata.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (activeTab == "coupons")
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="mb-0"><i class="bi bi-ticket-perforated me-2"></i>Gestione Coupon</h5>
                            <button class="btn btn-success" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%); border: none;" @onclick="ApriModaleCreazioneCoupon">
                                <i class="bi bi-plus-circle"></i> Nuovo Coupon
                            </button>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover align-middle table-mobile-cards">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th>Codice</th>
                                        <th>Titolo</th>
                                        <th>Sconto</th>
                                        <th>Validità</th>
                                        <th>Stato</th>
                                        <th>Azioni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (coupons.Any())
                                    {
                                        @foreach (var c in coupons)
                                        {
                                            <tr>
                                                <td data-label="Codice"><code class="fs-5 fw-bold text-primary">@c.Codice</code></td>
                                                <td data-label="Titolo">
                                                    <strong>@c.Titolo</strong>
                                                    <div class="small text-muted text-truncate" style="max-width: 200px;">@c.Descrizione</div>
                                                </td>
                                                <td data-label="Sconto">
                                                    @if (c.TipoSconto == "Percentuale")
                                                    {
                                                        <span class="badge bg-info text-dark">@c.ValoreSconto.ToString("0")% OFF</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">@c.ValoreSconto.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("it-IT")) OFF</span>
                                                    }
                                                </td>
                                                <td data-label="Validità">
                                                    <div class="small">Dal: @c.DataInizio.ToString("dd/MM/yyyy")</div>
                                                    <div class="small @(c.DataScadenza < DateTime.UtcNow ? "text-danger" : "text-success")">
                                                        Al: @c.DataScadenza.ToString("dd/MM/yyyy")
                                                    </div>
                                                </td>
                                                <td data-label="Stato">
                                                    @if (c.Attivo)
                                                    {
                                                        if (c.DataScadenza < DateTime.UtcNow)
                                                        {
                                                            <span class="badge bg-warning text-dark">Scaduto</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">Attivo</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Disattivato</span>
                                                    }
                                                </td>
                                                <td data-label="Azioni">
                                                    <div class="btn-group" role="group">
                                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => ApriModaleModificaCoupon(c)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => ApriModaleEliminazioneCoupon(c)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center py-4 text-muted">
                                                Nessun coupon presente.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crea/Modifica Negozio -->
@if (mostraModaleNegozio)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
                    <h5 class="modal-title text-white">
                        @(negozioInModifica == null ? "Nuovo Negozio" : "Modifica Negozio")
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="ChiudiModaleNegozio"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Codice</label>
                        <input @bind="negozioForm.Codice" class="form-control" placeholder="NE01" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nome</label>
                        <input @bind="negozioForm.Nome" class="form-control" placeholder="Suns Centro" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Città</label>
                        <input @bind="negozioForm.Citta" class="form-control" placeholder="Roma" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Indirizzo</label>
                        <input @bind="negozioForm.Indirizzo" class="form-control" placeholder="Via del Corso 1" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Telefono</label>
                        <input @bind="negozioForm.Telefono" class="form-control" placeholder="+39 06 1234567" />
                    </div>
                    <div class="form-check">
