@page "/login-cliente"
@using Fidelity.Shared.DTOs
@layout LoginLayout
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Login Cliente - Fidelis</PageTitle>

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4">
        <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
            <div class="card-header bg-gradient-customer border-0 py-4 text-center">
                <i class="bi bi-person-heart text-white display-4"></i>
                <h3 class="text-white mt-2 mb-0">Area Clienti</h3>
            </div>
            <div class="card-body p-4 p-md-5 bg-white">
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mb-4" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i> @errorMessage
                    </div>
                }

                <EditForm Model="@item" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />

                    <div class="form-floating mb-3">
                        <InputText id="emailOrCode" class="form-control" @bind-Value="item.EmailOrCode" placeholder=" " />
                        <label for="emailOrCode">Email o Codice Fidelity</label>
                        <ValidationMessage For="@(() => item.EmailOrCode)" />
                    </div>

                    <div class="form-floating mb-4">
                        <InputText type="password" id="password" class="form-control" @bind-Value="item.Password" placeholder=" " />
                        <label for="password">Password</label>
                        <ValidationMessage For="@(() => item.Password)" />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-customer btn-lg shadow-sm" disabled="@isBusy">
                            @if (isBusy)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Accesso in corso...</span>
                            }
                            else
                            {
                                <span>Accedi</span>
                            }
                        </button>
                    </div>
                </EditForm>

                <div class="text-center mt-4 border-top pt-3">
                    <p class="mb-2 text-muted">Non hai ancora un account?</p>
                    <a href="/register-cliente" class="text-decoration-none fw-bold text-customer">Registrati ora</a>
                </div>
            </div>
        </div>
        <div class="text-center mt-3 text-muted small">
            &copy; 2025 Fidelis Customer Portal
        </div>
    </div>
</div>

<style>
    .bg-gradient-customer {
        background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);
    }
    .btn-customer {
        background: linear-gradient(135deg, #7bc96f 0%, #52ab47 100%);
        color: white;
        border: none;
    }
    .btn-customer:hover {
        background: linear-gradient(135deg, #52ab47 0%, #2d8a27 100%);
        color: white;
    }
    .text-customer {
        color: #105a12ff;
    }
</style>

@code {
    private LoginClienteRequest item = new();
    private bool isBusy = false;
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        isBusy = true;
        errorMessage = "";

        try
        {
            var response = await Http.PostAsJsonAsync("api/Auth/login/cliente", item);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginClienteResponse>();
                if (result != null && result.Success)
                {
                    await JS.InvokeVoidAsync("localStorage.setItem", "authToken", result.Token);
                    await JS.InvokeVoidAsync("localStorage.setItem", "nomeCompleto", $"{result.Nome} {result.Cognome}");
                    await JS.InvokeVoidAsync("localStorage.setItem", "ruolo", "Cliente");
                    await JS.InvokeVoidAsync("localStorage.setItem", "codiceFidelity", result.CodiceFidelity);
                    
                    Navigation.NavigateTo("/profilo");
                }
                else
                {
                     errorMessage = result?.Messaggio ?? "Errore sconosciuto during il login";
                }
            }
            else
            {
                var result = await response.Content.ReadFromJsonAsync<LoginClienteResponse>();
                errorMessage = result?.Messaggio ?? "Credenziali non valide.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Errore di connessione: {ex.Message}";
        }
        finally
        {
            isBusy = false;
        }
    }
}
