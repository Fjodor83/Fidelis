@* Opzionale: Indicatore forza password *@
<div class="password-strength-meter mt-2">
    @if (!string.IsNullOrEmpty(Password))
    {
        var strength = CalcolaForzaPassword(Password);
        var colorClass = strength switch
        {
            <= 25 => "danger",
            <= 50 => "warning",
            <= 75 => "info",
            _ => "success"
        };
        
        <div class="progress" style="height: 8px;">
            <div class="progress-bar bg-@colorClass" 
                 role="progressbar" 
                 style="width: @strength%">
            </div>
        </div>
        <small class="text-@colorClass">
            @if (strength <= 25) { <span>Debole</span> }
            else if (strength <= 50) { <span>Media</span> }
            else if (strength <= 75) { <span>Buona</span> }
            else { <span>Forte</span> }
        </small>
    }
</div>

@code {
    [Parameter]
    public string Password { get; set; }

    private int CalcolaForzaPassword(string password)
    {
        if (string.IsNullOrEmpty(password)) return 0;

        int score = 0;

        // Lunghezza
        if (password.Length >= 8) score += 25;
        if (password.Length >= 12) score += 10;

        // Caratteri maiuscoli
        if (password.Any(char.IsUpper)) score += 15;

        // Caratteri minuscoli
        if (password.Any(char.IsLower)) score += 15;

        // Numeri
        if (password.Any(char.IsDigit)) score += 15;

        // Caratteri speciali
        if (password.Any(c => !char.IsLetterOrDigit(c))) score += 20;

        return Math.Min(score, 100);
    }
}

