@* Fidelity.Client/Pages/CambiaPassword.razor *@
@page "/cambia-password"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Cambia Password - Suns</PageTitle>

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
                        <h3 class="mb-0">🔐 Cambia Password</h3>
                        <p class="mb-0 small">Suns - Zero & Company</p>
                    </div>
                    <div class="card-body p-4">
                        @if (richiestaObbligatoria)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Attenzione!</strong> Per motivi di sicurezza, devi cambiare la password al primo accesso.
                            </div>
                        }

                        <EditForm Model="@request" OnValidSubmit="@CambiaPasswordAsync">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label fw-bold">Password Attuale</label>
                                <div class="input-group">
                                    <input @bind="request.PasswordAttuale" 
                                           type="@(mostraPasswordAttuale ? "text" : "password")"
                                           class="form-control" 
                                           placeholder="••••••••" />
                                    <button class="btn btn-outline-secondary" 
                                            type="button"
                                            @onclick="() => mostraPasswordAttuale = !mostraPasswordAttuale">
                                        <i class="bi bi-eye@(mostraPasswordAttuale ? "-slash" : "")"></i>
                                    </button>
                                </div>
                                <ValidationMessage For="@(() => request.PasswordAttuale)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Nuova Password</label>
                                <div class="input-group">
                                    <input @bind="request.NuovaPassword" 
                                           type="@(mostraNuovaPassword ? "text" : "password")"
                                           class="form-control" 
                                           placeholder="••••••••" />
                                    <button class="btn btn-outline-secondary" 
                                            type="button"
                                            @onclick="() => mostraNuovaPassword = !mostraNuovaPassword">
                                        <i class="bi bi-eye@(mostraNuovaPassword ? "-slash" : "")"></i>
                                    </button>
                                </div>
                                <small class="text-muted">Minimo 8 caratteri</small>
                                <ValidationMessage For="@(() => request.NuovaPassword)" class="text-danger d-block" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Conferma Nuova Password</label>
                                <div class="input-group">
                                    <input @bind="request.ConfermaPassword" 
                                           type="@(mostraConfermaPassword ? "text" : "password")"
                                           class="form-control" 
                                           placeholder="••••••••" />
                                    <button class="btn btn-outline-secondary" 
                                            type="button"
                                            @onclick="() => mostraConfermaPassword = !mostraConfermaPassword">
                                        <i class="bi bi-eye@(mostraConfermaPassword ? "-slash" : "")"></i>
                                    </button>
                                </div>
                                <ValidationMessage For="@(() => request.ConfermaPassword)" class="text-danger d-block" />
                            </div>

                            @if (!string.IsNullOrEmpty(messaggioErrore))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="bi bi-exclamation-triangle"></i> @messaggioErrore
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(messaggioSuccesso))
                            {
                                <div class="alert alert-success" role="alert">
                                    <i class="bi bi-check-circle"></i> @messaggioSuccesso
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <button type="submit" 
                                        class="btn btn-primary btn-lg" 
                                        disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Aggiornamento...</span>
                                    }
                                    else
                                    {
                                        <span>Cambia Password</span>
                                    }
                                </button>

                                @if (!richiestaObbligatoria)
                                {
                                    <button type="button" 
                                            class="btn btn-outline-secondary" 
                                            @onclick="@(() => Navigation.NavigateTo("/dashboard"))">
                                        Annulla
                                    </button>
                                }
                            </div>
                        </EditForm>

                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                <i class="bi bi-shield-check"></i> 
                                La tua password viene protetta con crittografia BCrypt
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CambiaPasswordRequest request = new();
    private bool isLoading = false;
    private string messaggioErrore = "";
    private string messaggioSuccesso = "";
    private bool richiestaObbligatoria = false;
    private string authToken = "";

    private bool mostraPasswordAttuale = false;
    private bool mostraNuovaPassword = false;
    private bool mostraConfermaPassword = false;

    protected override async Task OnInitializedAsync()
    {
        authToken = await JS.InvokeAsync<string>("localStorage.getItem", "authToken");

        if (string.IsNullOrEmpty(authToken))
        {
            Navigation.NavigateTo("/login-responsabile");
            return;
        }

        // Configura HttpClient con token
        Http.DefaultRequestHeaders.Authorization = 
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", authToken);

        // Verifica se cambio password è obbligatorio
        var richiestaResetStr = await JS.InvokeAsync<string>("localStorage.getItem", "richiestaResetPassword");
        richiestaObbligatoria = richiestaResetStr == "true";
    }

    private async Task CambiaPasswordAsync()
    {
        isLoading = true;
        messaggioErrore = "";
        messaggioSuccesso = "";

        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/cambia-password", request);
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<Dictionary<string, object>>();
                messaggioSuccesso = result["messaggio"].ToString();

                // Aggiorna flag in localStorage
                await JS.InvokeVoidAsync("localStorage.setItem", "richiestaResetPassword", "false");

                // Verifica se il profilo è incompleto
                var profiloIncompletoStr = await JS.InvokeAsync<string>("localStorage.getItem", "profiloIncompleto");

                // Redirect dopo 2 secondi
                await Task.Delay(2000);
                
                if (profiloIncompletoStr == "true")
                {
                    Navigation.NavigateTo("/completa-profilo");
                }
                else
                {
                    Navigation.NavigateTo("/dashboard");
                }
            }
            else
            {
                try
                {
                    var error = await response.Content.ReadFromJsonAsync<Dictionary<string, string>>();
                    messaggioErrore = error?["messaggio"] ?? "Errore durante il cambio password.";
                }
                catch
                {
                    // Se fallisce il parsing JSON, mostra messaggio basato sullo status code
                    messaggioErrore = response.StatusCode switch
                    {
                        System.Net.HttpStatusCode.BadRequest => "Verifica che i dati inseriti siano corretti.",
                        System.Net.HttpStatusCode.Unauthorized => "Sessione scaduta. Effettua nuovamente il login.",
                        _ => $"Errore durante il cambio password (cod. {(int)response.StatusCode})."
                    };
                }
            }
        }
        catch (Exception ex)
        {
            messaggioErrore = $"Errore di connessione: {ex.Message}";
            Console.WriteLine($"[ERROR] Password change failed: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
