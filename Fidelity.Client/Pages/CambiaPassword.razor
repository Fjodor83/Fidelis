@page "/cambia-password"
@using Fidelity.Client.Services
@using Fidelity.Client.Services.Interfaces
@using Fidelity.Shared.DTOs
@inject IAuthService AuthService
@inject IResponsabileService ResponsabileService
@inject NavigationManager Navigation

<PageTitle>Cambia Password - Suns</PageTitle>

<div class="min-vh-100 d-flex align-items-center" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #105a12ff 0%, #053e30ff 100%);">
                        <h3 class="mb-0">🔐 Cambia Password</h3>
                        <p class="mb-0 small">Suns - Zero & Company</p>
                    </div>
                    <div class="card-body p-4">
                        @if (richiestaObbligatoria)
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>Attenzione!</strong> Per motivi di sicurezza, devi cambiare la password al primo accesso.
                            </div>
                        }

                        <EditForm Model="@request" OnValidSubmit="@CambiaPasswordAsync">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label fw-bold">Password Attuale</label>
                                <div class="input-group">
                                    <input @bind="request.PasswordAttuale"
                                           type="@(mostraPasswordAttuale ? "text" : "password")"
                                           class="form-control"
                                           placeholder="••••••••" />
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            @onclick="() => mostraPasswordAttuale = !mostraPasswordAttuale">
                                        <i class="bi bi-eye@(mostraPasswordAttuale ? "-slash" : "")"></i>
                                    </button>
                                </div>
                                <ValidationMessage For="@(() => request.PasswordAttuale)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Nuova Password</label>
                                <div class="input-group">
                                    <input @bind="request.NuovaPassword"
                                           type="@(mostraNuovaPassword ? "text" : "password")"
                                           class="form-control"
                                           placeholder="••••••••" />
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            @onclick="() => mostraNuovaPassword = !mostraNuovaPassword">
                                        <i class="bi bi-eye@(mostraNuovaPassword ? "-slash" : "")"></i>
                                    </button>
                                </div>
                                <small class="text-muted">Minimo 8 caratteri</small>
                                <ValidationMessage For="@(() => request.NuovaPassword)" class="text-danger d-block" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Conferma Nuova Password</label>
                                <div class="input-group">
                                    <input @bind="request.ConfermaPassword"
                                           type="@(mostraConfermaPassword ? "text" : "password")"
                                           class="form-control"
                                           placeholder="••••••••" />
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            @onclick="() => mostraConfermaPassword = !mostraConfermaPassword">
                                        <i class="bi bi-eye@(mostraConfermaPassword ? "-slash" : "")"></i>
                                    </button>
                                </div>
                                <ValidationMessage For="@(() => request.ConfermaPassword)" class="text-danger d-block" />
                            </div>

                            @if (!string.IsNullOrEmpty(messaggioErrore))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="bi bi-exclamation-triangle"></i> @messaggioErrore
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(messaggioSuccesso))
                            {
                                <div class="alert alert-success" role="alert">
                                    <i class="bi bi-check-circle"></i> @messaggioSuccesso
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <button type="submit"
                                        class="btn btn-primary btn-lg"
                                        disabled="@isLoading">
                                    @if (isLoading)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Aggiornamento...</span>
                                    }
                                    else
                                    {
                                        <span>Cambia Password</span>
                                    }
                                </button>

                                @if (!richiestaObbligatoria)
                                {
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            @onclick="@(() => Navigation.NavigateTo("/dashboard"))">
                                        Annulla
                                    </button>
                                }
                            </div>
                        </EditForm>

                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                <i class="bi bi-shield-check"></i>
                                La tua password viene protetta con crittografia BCrypt
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CambiaPasswordRequest request = new();
    private bool isLoading = false;
    private string messaggioErrore = "";
    private string messaggioSuccesso = "";
    private bool richiestaObbligatoria = false;

    private bool mostraPasswordAttuale = false;
    private bool mostraNuovaPassword = false;
    private bool mostraConfermaPassword = false;

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticatedAsync())
        {
            Navigation.NavigateTo("/login-responsabile");
            return;
        }

        richiestaObbligatoria = await IsPasswordResetRequiredAsync();
    }

    private async Task CambiaPasswordAsync()
    {
        isLoading = true;
        messaggioErrore = "";
        messaggioSuccesso = "";

        try
        {
            var success = await ResponsabileService.CambiaPasswordAsync(request);

            if (success)
            {
                messaggioSuccesso = "Password cambiata con successo!";

                await Task.Delay(2000);

                var profiloIncompleto = await IsProfiloIncompletoAsync();
                if (profiloIncompleto)
                {
                    Navigation.NavigateTo("/completa-profilo");
                }
                else
                {
                    Navigation.NavigateTo("/dashboard");
                }
            }
            else
            {
                messaggioErrore = "Errore durante il cambio password. Verifica che la password attuale sia corretta.";
            }
        }
        catch (Exception ex)
        {
            messaggioErrore = "Errore di connessione. Riprova.";
            Console.Error.WriteLine($"Password change error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task<bool> IsPasswordResetRequiredAsync()
    {
        var token = await AuthService.GetTokenAsync();
        if (string.IsNullOrEmpty(token))
            return false;

        var claims = Helpers.JwtParser.ParseClaimsFromJwt(token);
        var resetClaim = claims.FirstOrDefault(c => c.Type == "richiestaResetPassword");
        return resetClaim?.Value == "true";
    }

    private async Task<bool> IsProfiloIncompletoAsync()
    {
        var token = await AuthService.GetTokenAsync();
        if (string.IsNullOrEmpty(token))
            return false;

        var claims = Helpers.JwtParser.ParseClaimsFromJwt(token);
        var profiloClaim = claims.FirstOrDefault(c => c.Type == "profiloIncompleto");
        return profiloClaim?.Value == "true";
    }
}